<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="@dimen/margin_vertical"
        android:paddingBottom="@dimen/margin_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/transaction_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_transaction_id_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/sender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_sender_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/recipient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_recipient_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_amount_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/transaction_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_type_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/transaction_subtype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_subtype_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_fee_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/timestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_timestamp_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/block_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_block_id_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/confirmations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_confirmations_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/full_hash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_full_hash_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/signature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_signature_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_vertical"
            android:layout_marginBottom="@dimen/margin_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/signature_hash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_left"/>

            <TextView
                android:id="@+id/view_transaction_details_signature_hash_value"
                android:text="@string/loading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_right"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>